<script type="text/javascript">
    function validateForm()
    {
     var file=document.forms["image_upload"]["file"].value;
     var url = document.forms["image_upload"]["url"].value;
     var custid = document.forms["image_upload"]["custid"].value;
     
     if(file=='' && url=='')
     {
      alert("File Name/URL is Required");
      return false;
     }
     if(file!='' && url!='')
     {
      alert("Please choose only one source of image");  
      return false;
     }
     if(custid=='')
     {
       alert("CustId is required");
       return false;
     } 
    };
    
    function validateForm2()
