/* 
--------------------------------------------------------------------------------------- */
.wrapperNews{width:395px;margin:0 auto}
.newsDvider{height:1px;width:100%;border:none;background:#000}

/* Content
--------------------------------------------------------------------------------------- */

/* Content -> Header
-------------------- */
.newsHeader{border:1px solid #000;padding:15px 10px;margin-bottom:10px}
.newsHeader h1{font-size:18px;font-weight:normal;color:#000;text-align:center;text-transform:capitalize}

/* Content -> Content
-------------------- */
.newsContent{width:100%}
.newsContent p{font-size:11px;font-weight:normal;color:#000;margin-top:5px;padding:3px}
.newsContent .newsContentImage{position:relative}
.newsContent .newsContentImage img{width:100%}
.newsContent .newsContentImage a.newsImageOwner{font-size:8px;font-weight:normal;color:#fff;display:block;background-color:#13345c;width:85px;height:15px;text-align:center;padding-top:10px;position:absolute;bottom:8px}
.newsContent .newsUser{width:115px;float:right}
.newsContent .newsUser img{float:left;margin-right:5px}
.newsContent .newsUser p{font-size:10px;font-weight:normal;color:#000}
.newsContent .newsUser p a{font-size:10px;font-weight:normal;color:#000}
.newsContent .newsUser p.newsUserName{margin:5px 0}
.newsContent .newsUser p.newsUserDame{color:#666}
